<!DOCTYPE html>
<html lang="en">
  
<head>
    <%- include('./partials/head'); -%>
    
</head>
<body onload="startTime()">
    <%- include('./partials/header_sidebar'); -%>
    
    <!-- tap on top starts-->
    <!-- https://milkyway.cscodetech.cloud/add_store.php#! -->
        <!-- Page Sidebar Ends-->
        <div class="page-body">
          <div class="container-fluid">
            <div class="page-title">
              <div class="row">
                <div class="col-sm-6">
                  <h3><%=lan.Edit%> <%=lan.Role%> <%=lan.Permission%></h3>
                </div>
                <div class="col-sm-6">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/index"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item"><%=lan.Dashboard%></li>
                    <li class="breadcrumb-item active"><%=lan.Edit%> <%=lan.Role%> <%=lan.Permission%></li>
                  </ol>
                </div>
              </div>
            </div>
          </div>
          <!-- Container-fluid starts-->
          <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            <form class="needs-validation" id="erole_form" novalidate="" action="/role/edit_role/<%= role.id %>" method="post">
                                <div class="row">
                                    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 form-group">
                                        <label class="col-form-label"><%=lan.Name%></label>
                                        <input class="form-control checkin" type="text" name="name" value="<%= role.name %>" placeholder="<%=lan.Enter%> <%=lan.Name%>" required>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 form-group">
                                        <label class="col-form-label"><%=lan.Email%></label>
                                        <input class="form-control checkin" type="text" name="email" value="<%= role.email %>" placeholder="<%=lan.Enter%> <%=lan.Email%>" required>
                                    </div>

                                    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 form-group">
                                        <label class="col-form-label"><%=lan.Phone%> <%=lan.Number%>.</label>
                                        <div class="row">
                                            <div class="col-4">
                                                <select class="js-example-basic-single checkin" id="erole_countrycode" name="country_code" required>
                                                    <option value selected disabled><%=lan.Country%></option>
                                                    <% CountryCode.forEach((data, x) => { %>
                                                        <option value="<%= data %>" <%= role.country_code == data ? 'selected' : '' %>> <%= nameCode[x] %> <%= data %> </option>
                                                    <% }) %>
                                                </select>
                                            </div>
                                            <div class="col-8">
                                                <input class="form-control checkin" id="erole_phone" type="number" name="phone" value="<%= role.phone %>" placeholder="<%=lan.Enter%> <%=lan.Phone%> <%=lan.Number%>." required>
                                            </div>
                                            <input type="hidden" id="rold_code" value="<%= role.country_code %>">
                                            <input type="hidden" id="rold_phone" value="<%= role.phone %>">
                                        </div>
                                    </div>
                                    
                                    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 form-group">
                                        <label class="col-form-label"><%=lan.Active%> <%=lan.Status%></label>
                                        <select class="js-example-basic-single checkin" name="status" required>
                                            <option value selected disabled><%=lan.Status%> <%=lan.List%></option>
                                            <option value="1" <%= role.rstatus == 1 ? 'selected' : '' %>><%=lan.Active%></option>
                                            <option value="0" <%= role.rstatus == 0 ? 'selected' : '' %>><%=lan.Inactive%></option>
                                        </select>
                                    </div>

                                    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 form-group">
                                        <label class="col-form-label"><%=lan.Password%></label>
                                        <input class="form-control" type="password" name="password"  required>
                                    </div>

                                    <div>
                                        <div class="p-3 mt-3" style="background-color: rgb(235, 232, 232);">
                                            <h6 class="m-0"><%=lan.Accessibility%></h6>
                                        </div>
                                    </div>
                                    
                                    <div class="mt-4">
                                        <div class="table-responsive theme-scrollbar">
                                            <table class="table">
                                                <thead class="table-dark">
                                                    <tr>
                                                        <th>#</th>
                                                        <th><%=lan.Permission%></th>
                                                        <th><%=lan.View%></th>
                                                        <th><%=lan.Add%></th>
                                                        <th><%=lan.Edit%></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td>1</td>
                                                        <td><%=lan.Book%> <%=lan.Services%></td>
                                                        <td><input class="checkinc" name="bookadd" id="bookadd" type="checkbox" <%= role.book_service[0] == 1 ? 'checked' : '' %>></td>
                                                        <td></td>
                                                        <td><input class="checkinc" name="bookedit" id="bookedit" type="checkbox" <%= role.book_service[1] == 1 ? 'checked' : '' %>></td>
                                                    </tr>
                                                    <tr>
                                                        <td>2</td>
                                                        <td><%=lan.Customer%></td>
                                                        <td><input class="checkinc" name="cusview" id="cusview" type="checkbox" <%= role.customer[0] == 1 ? 'checked' : '' %>></td>
                                                        <td><input class="checkinc" name="cusadd" id="cusadd" type="checkbox" <%= role.customer[1] == 1 ? 'checked' : '' %>></td>
                                                        <td><input class="checkinc" name="cusedit" id="cusedit" type="checkbox" <%= role.customer[2] == 1 ? 'checked' : '' %>></td>
                                                    </tr>
                                                    <tr>
                                                        <td>3</td>
                                                        <td><%=lan.Category%></td>
                                                        <td><input class="checkinc" name="catview" id="catview" type="checkbox" <%= role.category[0] == 1 ? 'checked' : '' %>></td>
                                                        <td><input class="checkinc" name="catadd" id="catadd" type="checkbox" <%= role.category[1] == 1 ? 'checked' : '' %>></td>
                                                        <td><input class="checkinc" name="catedit" id="catedit" type="checkbox" <%= role.category[2] == 1 ? 'checked' : '' %>></td>
                                                    </tr>
                                                    <tr>
                                                        <td>4</td>
                                                        <td><%=lan.Services%></td>
                                                        <td><input class="checkinc" name="serviview" id="catview" type="checkbox" <%= role.services[0] == 1 ? 'checked' : '' %>></td>
                                                        <td><input class="checkinc" name="serviadd" id="catadd" type="checkbox" <%= role.services[0] == 1 ? 'checked' : '' %>></td>
                                                        <td><input class="checkinc" name="serviedit" id="catedit" type="checkbox" <%= role.services[0] == 1 ? 'checked' : '' %>></td>
                                                    </tr>
                                                    <tr>
                                                        <td>5</td>
                                                        <td><%=lan.FAQ%></td>
                                                        <td><input class="checkinc" name="faqview" id="faqview" type="checkbox" <%= role.faq[0] == 1 ? 'checked' : '' %>></td>
                                                        <td><input class="checkinc" name="faqadd" id="faqadd" type="checkbox" <%= role.faq[1] == 1 ? 'checked' : '' %>></td>
                                                        <td><input class="checkinc" name="faqedit" id="faqedit" type="checkbox" <%= role.faq[2] == 1 ? 'checked' : '' %>></td>
                                                    </tr>
